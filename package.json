{
  "private": true,
  "name": "milesj-root",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript --build --reference-workspaces",
    "eslint": "beemo eslint ./packages/config",
    "jest": "beemo jest",
    "prettier": "beemo prettier \"./packages/config/src/{configs,scripts}/*.{ts,json,md,yml,yaml}\"",
    "test": "yarn run build && yarn run eslint && yarn run jest",
    "prerelease": "yarn test",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/semver": "^6.2.0",
    "eslint": "^6.8.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.16"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "rules": {
        "no-var": "off",
        "no-console": "off",
        "promise/always-return": "off",
        "compat/compat": "off",
        "import/no-extraneous-dependencies": "off"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
