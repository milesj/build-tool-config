{
  "private": true,
  "name": "milesj-root",
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript --build --reference-workspaces",
    "lint": "beemo eslint ./packages/config",
    "jest": "beemo jest",
    "format": "beemo prettier \"./packages/config/src/**/*.{ts,json,md,yml,yaml}\"",
    "test": "yarn run build && yarn run lint && yarn run jest",
    "prerelease": "yarn test",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.2",
    "@types/semver": "^7.3.4",
    "lerna": "^3.22.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "rules": {
        "no-var": "off",
        "no-console": "off",
        "promise/always-return": "off",
        "compat/compat": "off",
        "import/no-extraneous-dependencies": "off"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
