{
  "private": true,
  "name": "milesj-root",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript --build --reference-workspaces",
    "eslint": "beemo eslint ./packages/config",
    "jest": "beemo jest",
    "prettier": "beemo prettier \"./packages/config/{configs,dotfiles,scripts}/*.{js,json,md,yml,yaml}\"",
    "test": "yarn run eslint && yarn run jest",
    "prerelease": "yarn test",
    "release": "lerna publish"
  },
  "dependencies": {
    "lerna": "^3.19.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "rules": {
        "no-var": "off",
        "no-console": "off",
        "promise/always-return": "off"
      }
    }
  },
  "browserslist": [
    "last 2 versions"
  ],
  "publishConfig": {
    "access": "public"
  }
}
